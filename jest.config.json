{
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/client/src/**/*.{js,jsx}",
    "!<rootDir>/node_modules/",
    "!<rootDir>/server/*",
    "!<rootDir>/client/src/store/*",
    "!<rootDir>/client/src/tests/**/*",
    "!<rootDir>/client/src/index.js",
    "!<rootDir>/client/src/reducers/index.js"
  ],
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "setupFiles": [
    "<rootDir>/client/src/tests/utils/testSetup.js"
  ],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/client/src/tests/__mocks__/fileMock.js",
    "\\.(css|scss)$": "<rootDir>/client/src/tests/__mocks__/fileMock.js"
  },
  "restoreMocks": true
}